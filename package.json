{
    "name": "phaser-cordova-es6",
    "displayName": "Phaser Cordova Quickstart",
    "version": "1.0.1",
    "description": "A bootstrap project for building Phaser games using ES6 and Webpack.",
    "repository": {
        "type": "git",
        "url": "https://github.com/udia-software/phaser-cordova-es6.git"
    },
    "scripts": {
        "setup": "node setup.js",
        "dev": "webpack",
        "deploy": "webpack --config webpack.production.config.js",
        "test": "eslint ./src/**/**.js",
        "start": "cordova run browser -- --live-reload"
    },
    "author": "Alexander Wong <admin@alexander-wong.com>",
    "license": "Apache-2.0",
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.6",
        "babel-loader": "^7.1.5",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "copy-webpack-plugin": "^4.6.0",
        "eslint": "^4.19.1",
        "eslint-config-standard": "^10.2.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^5.2.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "expose-loader": "^0.7.5",
        "readline-sync": "^1.4.10",
        "webpack": "^3.12.0"
    },
    "dependencies": {
        "cordova-android": "^6.4.0",
        "cordova-browser": "^5.0.4",
        "cordova-ios": "^4.5.5",
        "cordova-plugin-browsersync": "git+https://git@github.com/awwong1/cordova-plugin-browsersync.git",
        "cordova-plugin-whitelist": "^1.3.4",
        "phaser-ce": "^2.13.3"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {},
            "cordova-plugin-browsersync": {}
        },
        "platforms": [
            "android",
            "browser",
            "ios"
        ]
    }
}