<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.udia.phaserCordovaES6" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Phaser Cordova Quickstart</name>
    <description>
        A bootstrap project for building Phaser games using ES6 and Webpack.
    </description>
    <author email="admin@alexander-wong.com" href="https://alexander-wong.com">
        Alexander Wong
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.0" />
    <engine name="ios" spec="^4.5.1" />
    <plugin name="cordova-plugin-browsersync" spec="git+ssh://git@github.com/awwong1/cordova-plugin-browsersync.git" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
